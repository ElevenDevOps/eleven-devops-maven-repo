pipeline {
    // add your slave label name
    agent { label 'tomcat_install2'}
    tools{
        maven 'maven3.8.6'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          /// git branch: 'main', url: 'https://github.com/ElevenDevOps/eleven-devops-maven-repo.git'	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn package'
            }
        }
        
        stage ('deploy') {

            steps {
               // update your tomcat server ip accordingly in below command
		    echo "deploying on tomcat server"
               //sh "scp target/maven-web-application.war  ec2-user@34.224.26.69:/opt/tomcat9/webapps/"
                    
            }
        }

        
    }
}
